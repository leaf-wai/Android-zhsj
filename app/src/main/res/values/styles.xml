<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/mipromedium</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="MaleTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMale</item>
        <item name="colorPrimaryDark">@color/colorMaleDark</item>
        <item name="colorAccent">@color/colorMaleAccent</item>
        <item name="android:fontFamily">@font/mipromedium</item>
    </style>

    <style name="FemaleTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorFemale</item>
        <item name="colorPrimaryDark">@color/colorFemaleDark</item>
        <item name="colorAccent">@color/colorFemaleAccent</item>
        <item name="android:fontFamily">@font/mipromedium</item>
    </style>

    <style name="BaseButtonTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/mipromedium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LogoutTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLogout</item>
        <item name="colorPrimaryDark">@color/colorLogoutDark</item>
        <item name="colorAccent">@color/colorLogoutAccent</item>
        <item name="android:fontFamily">@font/mipromedium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchViewIcon">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:alpha">0.54</item>
        <item name="android:fontFamily">@font/mipromedium</item>
    </style>

    <style name="SearchHistoryText">
        <item name="android:fontFamily">@font/mipromedium</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

